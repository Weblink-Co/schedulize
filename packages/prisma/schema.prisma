// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Providers {
  GOOGLE
  EMAIL
  SMS
}

model User {
  id            Int       @id @default(autoincrement())
  username      String?
  name          String?
  email         String
  emailVerified DateTime?
  bio           String?
  avatar        String?
  timezone      String
  weekStart     String
  locale        String?
  timeFormat    Int?
  verified      Boolean
  metadata      Json?
  accounts      Account[]
  Session       Session[]

  @@unique([email])
  @@unique([email, username])
  @@index([emailVerified])
}

model Account {
  id                String    @id @default(cuid())
  userId            Int
  type              String
  provider          Providers
  ProviderAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  User User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, ProviderAccountId])
  @@index([userId])
  @@index([type])
}

model Session {
  id           String   @id @default(cuid())
  userId       Int
  user         User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionToken String
  expires      DateTime
}
